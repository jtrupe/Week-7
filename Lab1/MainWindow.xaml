<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="operandListBox" HorizontalAlignment="Left" Height="116" Margin="333,120,0,0" VerticalAlignment="Top" Width="36">
            <ListBoxItem Content="+"/>
            <ListBoxItem Content="-"/>
            <ListBoxItem Content="*"/>
            <ListBoxItem Content="/"/>
            <ListBoxItem Content="%"/>
        </ListBox>
        <TextBox x:Name="leftBox" HorizontalAlignment="Left" Height="23" Margin="189,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="rightBox" HorizontalAlignment="Left" Height="23" Margin="401,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="calculateButton" Content="Calculate" Click="calculateButton_Click" HorizontalAlignment="Left" Margin="346,287,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="resultBox" HorizontalAlignment="Left" Height="23" Margin="627,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
